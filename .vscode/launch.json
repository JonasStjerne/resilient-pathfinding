    "version": "0.2.0",
    "compounds": [
        {
            "name": "Launch",
            "configurations": ["Run npm dev script", "Open chrome"]
        }
    ],
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open chrome",
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}/client"
        },
        {
            "name": "Run npm dev script",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/client",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "dev:debug"
            ],
        }
    ]
}